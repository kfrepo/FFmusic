<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/title_ll"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_start"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="开始" />

        <Button
            android:id="@+id/bt_pause"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="暂停"
            android:layout_below="@+id/bt_next"/>

        <Button
            android:id="@+id/bt_resume"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="继续" />

        <Button
            android:id="@+id/bt_stop"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="停止播放"
            android:layout_below="@+id/bt_resume"/>

        <Button
            android:id="@+id/bt_next"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="下一首" />
    </LinearLayout>

    <!-- 时间进度 -->
    <LinearLayout
        android:id="@+id/audio_seek_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_ll"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/tv_playtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00/00:00"
            android:textColor="#222222" />
        <SeekBar
            android:id="@+id/audio_seek_sb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"/>
    </LinearLayout>

    <!-- 音量 -->
    <LinearLayout
        android:id="@+id/audio_volume_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/audio_seek_ll"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/audio_volume_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音量 50"
            android:textColor="#222222" />
        <SeekBar
            android:id="@+id/audio_volume_sb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="60" />
    </LinearLayout>


    <Button
        android:id="@+id/bt_finish"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:text="退出"
        android:layout_below="@+id/audio_volume_ll"/>

</RelativeLayout>